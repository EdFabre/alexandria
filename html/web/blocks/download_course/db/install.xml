<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/download_course/db" VERSION="20090701" COMMENT="XMLDB file for Moodle course download tables">
  <TABLES>
    <TABLE NAME="block_download_course" COMMENT="To store the total number of downloadings for each course">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="course" />
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="downloading"/>
        <FIELD NAME="downloading" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="course" />
      </FIELDS>
      <KEYS>
        <KEY NAME="download_course_pk" TYPE="primary" FIELDS="id" COMMENT="Primary key for course downloadings"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="download_course_ix" UNIQUE="true" FIELDS="course" />
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>